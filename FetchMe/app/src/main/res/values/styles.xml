	</style>

	<style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
		<item name="android:background">@color/thedark</item>
		<item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
		<item name="android:subtitleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
	</style>
	<style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
		<item name="android:textColor">@color/white</item>

	</style>


</resources>
